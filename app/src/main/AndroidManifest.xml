<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.homefinderz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.ViewListing.ViewListingActivity"></activity>
        <activity android:name=".view.AcceptedListings.AcceptedListingsListActivity" />
        <activity android:name=".view.SearchHistory.SearchHistoryActivity" />
        <activity android:name=".view.SavedSearches.SavedSearchesActivity" />
        <activity android:name=".view.Listing.ManageListingsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MANAGE_LISTINGS" />
            </intent-filter>
        </activity>
        <activity android:name=".view.accountUI.AccountUIActivity" />
        <activity android:name=".view.accountUI.PremiumPopUp" />
        <activity android:name=".view.ValidateMail.ValidateMailActivity" />
        <activity android:name=".view.modifyListing.ModifyListingActivity" />
        <activity android:name=".view.publishListing.PublishListingActivity" />
        <activity android:name=".view.search.SearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".view.modifyAccount.ModifyAccountActivity" />
        <activity android:name=".view.signUp.SignUpActivity">
            <intent-filter>
                <action android:name="android.intent.action.SIGN_UP" />
            </intent-filter>
        </activity>
        <activity android:name=".view.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.LOGIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>