<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_sign_up_color">

    <TextView
        android:id="@+id/tv_al_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/tv_al_SQM"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_al_Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="20dp"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_al_SQM"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_al_SQM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/tv_al_Location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_al_Price" />

    <ImageView
        android:id="@+id/img_al_Image"
        android:layout_width="98dp"
        android:layout_height="99dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/imagenotfound" />

    <Button
        android:id="@+id/btn_al_Delete"
        android:layout_width="62dp"
        android:layout_height="36dp"
        android:layout_marginStart="76dp"
        android:background="#D30000"
        android:text="@string/delete"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tv_al_Price"
        app:layout_constraintTop_toTopOf="@+id/tv_al_Price" />

    <Button
        android:id="@+id/btn_al_ViewItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_more"
        app:layout_constraintBottom_toBottomOf="@+id/tv_al_Location"
        app:layout_constraintEnd_toEndOf="@+id/btn_al_Delete" />


</androidx.constraintlayout.widget.ConstraintLayout>